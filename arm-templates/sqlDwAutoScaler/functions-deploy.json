          "10:00 PM ( 22:00 )",
          "10:30 PM ( 22:30 )",
          "11:00 PM ( 23:00 )",
          "11:30 PM ( 23:30 )"
        ]
      },
      "scaleUpScheduleEndTime": {
        "type": "String",
        "metadata": {
          "description": "The end of the time period during which the data warehouse can only be scaled up."
        },
        "allowedValues": [
          "12:00 AM (  0:00 )",
          "12:30 AM (  0:30 )",
          "01:00 AM (  1:00 )",
          "01:30 AM (  1:30 )",
          "02:00 AM (  2:00 )",
          "02:30 AM (  2:30 )",
          "03:00 AM (  3:00 )",
          "03:30 AM (  3:30 )",
          "04:00 AM (  4:00 )",
          "04:30 AM (  4:30 )",
          "05:00 AM (  5:00 )",
          "05:30 AM (  5:30 )",
          "06:00 AM (  6:00 )",
          "06:30 AM (  6:30 )",
          "07:00 AM (  7:00 )",
          "07:30 AM (  7:30 )",
          "08:00 AM (  8:00 )",
          "08:30 AM (  8:30 )",
          "09:00 AM (  9:00 )",
          "09:30 AM (  9:30 )",
          "10:00 AM ( 10:00 )",
          "10:30 AM ( 10:30 )",
          "11:00 AM ( 11:00 )",
          "11:30 AM ( 11:30 )",
          "12:00 PM ( 12:00 )",
          "12:30 PM ( 12:30 )",
          "01:00 PM ( 13:00 )",
          "01:30 PM ( 13:30 )",
          "02:00 PM ( 14:00 )",
          "02:30 PM ( 14:30 )",
          "03:00 PM ( 15:00 )",
          "03:30 PM ( 15:30 )",
          "04:00 PM ( 16:00 )",
          "04:30 PM ( 16:30 )",
          "05:00 PM ( 17:00 )",
          "05:30 PM ( 17:30 )",
          "06:00 PM ( 18:00 )",
          "06:30 PM ( 18:30 )",
          "07:00 PM ( 19:00 )",
          "07:30 PM ( 19:30 )",
          "08:00 PM ( 20:00 )",
          "08:30 PM ( 20:30 )",
          "09:00 PM ( 21:00 )",
          "09:30 PM ( 21:30 )",
          "10:00 PM ( 22:00 )",
          "10:30 PM ( 22:30 )",
          "11:00 PM ( 23:00 )",
          "11:30 PM ( 23:30 )"
        ]
      }
    },
    "variables": {
      "functionName": "ScaleSqlDw",
      "functionAppName": "[concat(uniquestring(resourceGroup().id), 'funcapp')]",
      "hostingPlanName": "[concat(uniquestring(resourceGroup().id), 'appserv')]",
      "storageAccountName": "[concat(uniquestring(resourceGroup().id), 'funcstore')]",
      "storageAccountid": "[concat(resourceGroup().id,'/providers/','Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]",
      "sqlDwId": "[resourceId(parameters('SQL DW Resource Group'),'Microsoft.Sql/servers/databases', parameters('SQL DW Logical Server'), parameters('SQL DW Name'))]",
      "codePackageLocation": "https://funcdeptest.blob.core.windows.net/funcdeptest/SqlDwAutoScaler.zip",
      "scaleUpScheduleStartTimeMinute": "[replace(split(substring(parameters('scaleUpScheduleStartTime'), 11, 5), ':')[1],'00', '0')]",
      "scaleUpScheduleStartTimeHour": "[split(substring(parameters('scaleUpScheduleStartTime'), 11, 5), ':')[0]]",
      "scaleUpScheduleEndTimeMinute": "[replace(split(substring(parameters('scaleUpScheduleEndTime'), 11, 5), ':')[1], '00', '0')]",
      "scaleUpScheduleEndTimeHour": "[split(substring(parameters('scaleUpScheduleEndTime'), 11, 5), ':')[0]]",
      "scaleUpScheduleStartTime": "[concat(variables('scaleUpScheduleStartTimeHour'), ':' , variables('scaleUpScheduleStartTimeMinute'))]",
      "scaleUpScheduleEndTime": "[concat(variables('scaleUpScheduleEndTimeHour'), ':' , variables('scaleUpScheduleEndTimeMinute'))]"
    },
    "resources": [{
        "type": "Microsoft.Storage/storageAccounts",
        "sku": {
          "name": "[parameters('Storage Account Type')]"
        },
        "kind": "Storage",
        "name": "[variables('storageAccountName')]",
        "apiVersion": "2016-12-01",
        "location": "[resourceGroup().location]"
      },
      {
        "type": "Microsoft.Web/serverfarms",
        "name": "[variables('hostingPlanName')]",
        "apiVersion": "2015-04-01",
        "location": "[resourceGroup().location]",
        "properties": {
          "name": "[variables('hostingPlanName')]",
          "computeMode": "Dynamic",
          "sku": "Dynamic"
        }
      },
      {
        "type": "Microsoft.Web/sites",
        "kind": "functionapp",
        "name": "[variables('functionAppName')]",
        "apiVersion": "2015-08-01",
        "location": "[resourceGroup().location]",
        "properties": {
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
          "siteConfig": {
            "appSettings": [{
                "name": "AzureWebJobsDashboard",
                "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
              },
              {
                "name": "AzureWebJobsStorage",
                "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
              },
              {
                "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
              },
              {
                "name": "WEBSITE_CONTENTSHARE",
                "value": "[variables('storageAccountName')]"
              },
              {
                "name": "FUNCTIONS_EXTENSION_VERSION",
                "value": "~1"
              },
              {
                "name": "WEBSITE_NODE_DEFAULT_VERSION",
                "value": "6.5.0"
              },
              {
                "name": "WEBSITE_TIME_ZONE",
                "value": "[parameters('WEBSITE_TIME_ZONE')]"
              },
              {
                "name": "SqlDwLocation",
                "value": "[parameters('SQL DW Region')]"
              },
              {
                "name": "DwuConfigFile",
                "value": "D:\\home\\site\\wwwroot\\dwuconfigs.json"
              },
              {
                "name": "DwScaleLogsTable",
                "value": "DwScaleLogs"
              },
              {
                "name": "ScaleUpScheduleStartTime",
                "value": "[variables('scaleUpScheduleStartTime')]"
              },
              {
                "name": "ScaleUpScheduleEndTime",
                "value": "[variables('scaleUpScheduleEndTime')]"
              },
              {
                "name": "SubscriptionId",
                "value": "[parameters('Subscription ID')]"
              },
              {
                "name": "TenantId",
                "value": "[parameters('Azure Active Directory ID')]"
              },
              {
                "name": "ClientId",
                "value": "[parameters('Service Principal Application ID')]"
              },
              {
                "name": "ClientKey",
                "value": "[parameters('Service Principal Secret Key')]"
              }
            ]
          }
        },
        "resources": [{
          "type": "extensions",
          "name": "MSDeploy",
          "apiVersion": "2015-08-01",
          "location": "[resourceGroup().location]",
          "tags": {
            "displayName": "webdeploy"
          },
          "properties": {
            "packageUri": "[variables('codePackageLocation')]",
            "dbType": "None",
            "connectionString": "",
            "description": "Deployment of the Autoscaler functions."
          },
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', variables('functionAppName'))]"
          ],
          "resources": [
            { 
              "apiVersion": "2017-05-10", 
              "name": "secretTemplate", 
              "type": "Microsoft.Resources/deployments", 
              "properties": { 
                "mode": "incremental", 
                "templateLink": {
                  "uri": "https://raw.githubusercontent.com/hirokib/sql-data-warehouse-samples/ad6e2c9/arm-templates/sqlDwAutoScaler/secrets-template.json",
                  "contentVersion": "1.0.0.0"
                }
              },
              "dependsOn":  "[concat('Microsoft.Web/sites/extensions', '/MSDeploy')]"
          } 
          ]
        }],
        "dependsOn": [
          "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
          "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
        ]
      }
  
    ],
    "outputs": {
      "deploymentEndTime": {
        "value": "[reference('MSDeploy').endTime]",
        "type": "string"
      },
      "provisioningState": {
        "value": "[reference('MSDeploy').provisioningState]",
        "type": "string"
      },
      "functionKey": {
        "value": "[reference('secretTemplate').outputs.functionKey]",
        "type": "string"
      }
    }
  }