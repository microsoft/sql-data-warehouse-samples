      "scaleUpScheduleStartTime": {
        "type": "String",
        "metadata": {
          "description": "The beginning of the time period during which the data warehouse can only be scaled up."
        },
        "allowedValues": [
          "12:00 AM (  0:00 )",
          "12:30 AM (  0:30 )",
